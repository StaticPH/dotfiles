#! /bin/bash

repo='ryanoasis/nerd-fonts'
wantedFonts=( 'CodeNewRoman' 'DejaVuSansMono' 'Inconsolata' 'RobotoMono' 'NerdFontsSymbolsOnly' )

for name in "${wantedFonts[@]}"; do
	command wget --progress=bar:noscroll --show-progress --no-verbose -N --random-wait \
		"https://github.com/${repo}/releases/latest/download/${name}.tar.xz"
done


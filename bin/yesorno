#! /bin/bash
#-vfx

check_yes_no () { 
	[ -n "$1" ] && \
		local PS3="$1" || \
		local PS3="Enter 1 for Yes, or 2 for No: "
    select yn in Yes No; do 
        [[ $yn == 'Yes' ]] && echo "Accepted action" >&2 && return 0
        [[ $yn == 'No' ]] && echo "Rejecting action" >&2 && return 1 # was "Skipping action"
    done
}
$(check_yes_no) && \
	# res=1 || \
	# res=0
	res="Yes" || \
	res="No"
echo "Answered $res"